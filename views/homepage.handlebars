<!-- hero secction has logo along with text (looks kinda empty wanted to add somekind of background video but ran into several bugs)  -->
<section class="hero is-danger is-fullheight has-background-black ">
  <div class="hero-body is-flex is-justify-content-space-around flex-wrap">
    <div class="item">
      <p class="title strong ml-6">
        Welcome to Battle Binder!
      </p>
      <p class="subtitle ml-6">
        Searching for cards has never been "easier"!
      </p>
    </div>
    <div>
      <img src="../../static-html/assets/images/battle-binder-log-med.png" alt="image of a magical book">
    </div>
  </div>
</section>

<div class="title has-text-centered has-text-white mt-5">
  <p>Random Generated card</p>
</div>
<div class="has-text-centered">
  <!-- this figure tag is used to hold the image and make it work through bulma  -->
  <figure class="is-inline-block mt-5" for="random-card">
    <img src="{{ randomCard.image_url }}" data-card-id={{randomCard.id}}>
  </figure>
</div>
<!-- add to Deck button  -->
<div class="buttons is-centered mt-5">
  <!-- TODO: write js code to add card to Deck list -->
  <a class="button has-background-black has-text-white" id="add-to-deck">
    Add to Deck
  </a>

</div>

<!-- search bar section  -->
<br><br>

<section class="container"> <a name="search"></a>
  <div class="title has-text-centered has-text-white mt-5">
    <p>What card would you like to search?</p>
  </div>
  <!-- search bar  -->
  <div>
    <input class="input is-medium" type="text"
      placeholder="Search for any card; if your logged in: add it to your favorites list.">
  </div>

  <!-- search button for handling search bar input  -->
  <div class="has-text-centered pt-6">
    <a class="button has-background-black has-text-white is-large">
      Search
    </a>
  </div>

  <!-- imag of the gold sarcophagus (fun fact: gold sarcophagus allows you to search for any card in the yugioh trading card game)  -->

  <div class="has-text-centered">
    <figure class="is-inline-block mt-5">
      <img src="../../static-html/assets/images/gold sarc.png" alt="">
    </figure>

    <!-- add to Deck button  -->
    <div class="buttons is-centered mt-5">
      <a class="button has-background-black has-text-white" id="add-to-deck">
        Add to Deck
      </a>
    </div>

    <br><br><br>


</section>
