<section class="container">
    <form class="box mx-6">
        <div class="title has-text-dark has-text-centered">
            <p>Sign up</p>
        </div>
        <div class="field">
            {{!-- 0. kept "LABEL for" the same as mini project --}}
            <label class="label" for="name-signup">Name</label>
            <div class="control">
                {{!-- 1. first INPUT for name signup --}}
                <input class="input" type="text" placeholder="e.g. Yugi Mutou" id="name-signup">
            </div>
        </div>

        <div class="field">
            {{!-- 2. kept "LABEL for" the same as mini project --}}
            <label class="label" for="email-signup">Email</label>
            <div class="control">
                {{!-- 3. second INPUT for name signup --}}
                <input class="input" type="text" placeholder="e.g. pharoahatem@example.com" id="email-signup">
            </div>
        </div>

        <div class="field">
            {{!-- 4. kept "LABEL for" the same as mini project --}}
            <label class="label" for="password-signup">Password</label>
            <div class="control">
                {{!-- 5. third INPUT for name signup --}}
                <input class="input" type="password" id="password-signup" placeholder="********">
            </div>
        </div>

        {{!-- 6. BUTTON (added type of submit) --}}
        <button class="button has-background-black has-text-white is-normal" type="submit">Sign Up</button>
    </form>
</section>

